{% extends 'base.html.twig' %}

{% block title %}Papers index{% endblock %}

{% block body %}
    <h1>Papers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>CreateAt</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paper in papers %}
            <tr>
                <td>{{ paper.id }}</td>
                <td>{{ paper.title }}</td>
                <td>{{ paper.slug }}</td>
                <td>{{ paper.createAt ? paper.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ paper.updateAt ? paper.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_papers_show', {'id': paper.id}) }}">show</a>
                    <a href="{{ path('app_papers_edit', {'id': paper.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_papers_new') }}">Create new</a>
{% endblock %}
